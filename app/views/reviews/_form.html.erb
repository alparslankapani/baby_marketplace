<%= form_for([@user, @review]) do |f| %>
  <% if @review.errors.any? %>
    <div id="error_explanation", class= "alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h4>

      <ul>
      <% @review.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div id="star-rating"></div><br>

  <div class="form-group">
    <%= f.label :comment, "Yorum" %>
    <%= f.text_area :comment, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit "Yorum Ekle", class: "btn btn-primary" %>
  </div>
<% end %>

<script>
$('#star-rating').raty({
  path: 'https://s3.amazonaws.com/karlibebek/stars',
  scoreName: 'review[rating]'
});
</script>