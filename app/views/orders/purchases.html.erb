<div class:"center">
<h2>Your Purchase History</h2>
</div>

<table class= "table table-striped table-bordered">
	<tr>
		<th class="center">Image</th>
		<th class="center">Item</th>
		<th class="center">Price</th>
		<th class="center">Seller</th>
		<th class="center">Contact Details</th>
		<th class="center">Date Purchased</th>
	</tr>

	<% @orders.each do |order| %>
	<tr>
		<td class="center"><%= image_tag order.listing.image.url(:thumb) %></td>
		<td class="center"><%= order.listing.name %></td>
		<td class="center"><%= number_to_currency(order.listing.price) %></td>
		<td class="center"><%= order.seller.name %></td>
		<td class="center">
			<iframe
			  width="100"
			  height="120"
			  frameborder="0" style="border:0"
			  src="https://www.google.com/maps/embed/v1/place?key=AIzaSyCBZuNdgpM6bKs51cuncO3qGlRtz5NkOoE
			    &q=<%= order.seller.adress_information.adress.parameterize %>&zoom=17">
			</iframe>

		
		<td class="center"><%= order.created_at.strftime("%-d %B, %Y") %></td>
	</tr>
	<% end %>
</table>

<br>
<% if (user_signed_in?) %>
  <%= link_to 'New Listing', new_listing_path, class: "btn-link", data: { no_turbolink: true } %>
<% else %>
  <%= link_to 'New Listing', new_user_session_path, class: "btn-link", data: { no_turbolink: true } %>
<% end %>