
<div class="row">
	<div class="col-md-6">
		<div class="center">
			<h1>Profile</h1>
		</div>
		<div class="thumbnail">
			<%= image_tag @user.image.url %><br>
			<div class="center">
				<h4><%= "Üye:  #{@user.name}" %></h4>
			</div>
		</div>
		<h4><em>Üye Hakkındaki Yorumlar</em></h4>
		<%= link_to "Yorum Ekle", new_user_review_path(@user), class: "btn btn-primary" %>
	</div>


	<div class="col-md-6">
		<div class="center">
		<h1>Satılan Ürünler</h1>
		</div>
		<table class= "table table-striped table-bordered">
			<tr>
				<th class="center">Resim</th>
				<th class="center">Ürün</th>
				<th class="center">Fiyat</th>
			</tr>

			<% @listings.each do |listing| %>
			<tr>
				<td class="center"><%= image_tag listing.image.url(:thumb) %></td>
				<td class="center"><%= listing.name %></td>
				<td class="center"><%= number_to_currency(listing.price) %></td>
			</tr>
			<% end %>
		</table>
	</div>
</div>