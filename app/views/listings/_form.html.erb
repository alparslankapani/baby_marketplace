<%= form_for(@listing, :html => { :multipart => true }) do |f| %>
  <% if @listing.errors.any? %>
    <div id="error_explanation", class= "alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@listing.errors.count, "error") %> prohibited this listing from being saved:</h4>

      <ul>
      <% @listing.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div id="stripe_error" class="alert alert-danger" style="display:none">
        <noscript>JavaScript is not enabled and is required for this form. First enable it in your web browser settings.</noscript>
  </div>

  <div class="form-group">
    <%= f.label :name, "Başlık" %><br>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :description, "Tanıtım" %><br>
    <%= f.text_area :description, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :price, "Fiyat" %><br>
    <%= f.text_field :price, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :image, "Resim" %><br>
    <%= f.file_field :image, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :category_id, "Kategorini Seç" %><br>
     <%= f.collection_select :category_id, Category.all, :id , :name, {prompt: "Lütfen Kategori Seçiniz"}, {class: "btn btn-default dropdown-toggle"}  %>
 
   
    
  </div>
  <div class="form-group">
    <%= f.label :postal_code, "Posta Kodu" %><br>
    <%= f.text_field :postal_code, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :location, "Lokasyon" %><br>
    <%= f.text_field :location, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :product_condition, "Ürünün Durumu" %><br>
    <%= f.select :product_condition, options_for_select([:yeni, :az_kullanilmis, :kullanilmis]), { :prompt => "Lütfen Seçiniz"} %>
  </div>
  <div class="form-group">
    <%= f.label :gender, "Cinsiyet" %><br>
    <%= f.select :gender, options_for_select([:unisex, :erkek, :kiz]), { :prompt => "Lütfen Seçiniz"} %>
  </div>
   <div class="form-group">
    <%= f.label :age_range, "Yaş Aralığı" %><br>
    <%= f.select :age_range, options_for_select(["0-6 ay", "6-12 ay", "1-2 yaş", "2-3 yaş", "3-5 yaş"]), { :prompt => "Lütfen Seçiniz"} %>
  </div>
  <div class="form-group">
    <%= f.label :delivery_information, "Gönderim Türü" %><br>
    <%= f.select :delivery_information, options_for_select(["Sadece Elden Teslim", "Sadece Kargolanır", "Elden Teslim ya da Kargolanır"]), { :prompt => "Lütfen Seçiniz"} %>
  </div>
