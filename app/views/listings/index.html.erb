<div class= "pull-right">
  <div class="fb-like" data-href="http://etsydemo-surferalp.herokuapp.com" data-layout="button_count" data-action="like" data-show-faces="true" data-share="false">
  </div>
</div>
<br><br>

<div class="jumbotron">
<%= t('jumbotron_title_html') %>
<%= t('jumbotron_subtitle_html') %>
</div>

<div class= "center">
<div class="row">
  <% @listings.each do |listing| %>
    <div class="col-md-3">
      <div class="thumbnail">
        <%= link_to image_tag(listing.image.url), listing %>
        <div class="caption">
         <h3><%= listing.name %></h3>
         <p><%= number_to_currency(listing.price) %></p>
         <p><%= t('sold_by', user: listing.user.name) %></p>
        </div>
      </div>
     </div>
    <% end %>
  </div>
</div>
<br>

<div class= "center">
<%= will_paginate @posts, renderer: BootstrapPagination::Rails %>
</div>

<br>
<% if (user_signed_in?) %>
  <%= link_to new_listing_path, class: "btn btn-primary", data: { no_turbolink: true } do %>
  <i class= "glyphicon glyphicon-plus"></i><%= t('new_listing') %>
  <% end %>
<% else %>
  <%= link_to new_user_registration_path, class: "btn btn-primary", data: { no_turbolink: true } do %>
  <i class= "glyphicon glyphicon-plus"></i><%= t('new_listing') %>
  <% end %>
<% end %>